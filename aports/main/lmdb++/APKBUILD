pkgname=lmdb++
_commit="0b43ca87d8cfabba392dfe884eb1edb83874de02"
pkgver=0.9.14.0_git20160229
pkgrel=0
pkgdesc="C++11 wrapper for the LMDB embedded B+ tree database library"
url="https://github.com/bendiken/lmdbxx"
arch="noarch"
license="Unlicense"
depends=""
makedepends=""
source="$pkgname-$_commit.tar.gz::https://github.com/bendiken/lmdbxx/archive/$_commit.tar.gz"
options="!check"
subpackages="$pkgname-dev"

builddir="$srcdir/lmdbxx-$_commit"
build() {
	make
}

package() {
	cd "$builddir"
	make PREFIX=/usr DESTDIR="${pkgdir}" install
	install -m644 -D UNLICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
